{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "defaultCollection": "@angular-eslint/schematics",
    "packageManager": "yarn",
    "schematicCollections": [
      "@angular-eslint/schematics"
    ]
  },
  "newProjectRoot": "projects",
  "schematics": {
    "@angular-eslint/schematics:application": {
      "setParserOptionsProject": true
    },
    "@angular-eslint/schematics:library": {
      "setParserOptionsProject": true
    }
  },
  "projects": {
    "the-application": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/the-application",
      "sourceRoot": "projects/the-application/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/the-application",
            "index": "projects/the-application/src/index.html",
            "main": "projects/the-application/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/the-application/tsconfig.app.json",
            "assets": [
              "projects/the-application/src/favicon.ico",
              "projects/the-application/src/assets"
            ],
            "styles": [
              "projects/the-application/src/custom-theme.scss",
              "projects/the-application/src/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "the-application:build:production"
            },
            "development": {
              "browserTarget": "the-application:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "the-application:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/the-application/tsconfig.spec.json",
            "assets": [
              "projects/the-application/src/favicon.ico",
              "projects/the-application/src/assets"
            ],
            "styles": [
              "projects/the-application/src/styles.css"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/the-application/**/*.ts",
              "projects/the-application/**/*.html"
            ]
          }
        }
      }
    },
    "the-library": {
      "projectType": "library",
      "root": "projects/the-library",
      "sourceRoot": "projects/the-library/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/the-library/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/the-library/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/the-library/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/the-library/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/the-library/**/*.ts",
              "projects/the-library/**/*.html"
            ]
          }
        }
      }
    }
  }
}
